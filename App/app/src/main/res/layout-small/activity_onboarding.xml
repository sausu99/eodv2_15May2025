<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.IntroductionActivity">

    <ImageView
        android:layout_width="@dimen/_124sdp"
        android:layout_height="@dimen/_124sdp"
        android:id="@+id/img"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:src="@drawable/img_sliderimg"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:id="@+id/imgdesc"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tittle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_tittle2"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="sans-serif"
            android:text="@string/slidetitle1"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tittle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_continue"
            android:layout_marginBottom="@dimen/_14sdp"
            android:gravity="center"
            android:text="@string/slidetitle3"
            android:textColor="@color/darkgraywhite"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>
</RelativeLayout>
