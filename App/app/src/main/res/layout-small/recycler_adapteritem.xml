<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:backgroundTint="@color/transprant"
        android:background="@drawable/btn_bglboutline"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/transprant"
            android:elevation="10dp"
            android:id="@+id/rl1"
            android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  2h 45m 32s"
                android:id="@+id/txtTime"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/time"
                android:layout_marginStart="0dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:background="@drawable/et_border11"
                android:backgroundTint="@color/white"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_4sdp"/>


            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:src="@drawable/ic_info"
                android:id="@+id/type"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/img_background"
            app:riv_corner_radius_bottom_left="@dimen/_17sdp"
            app:riv_corner_radius_bottom_right="@dimen/_17sdp"
            app:riv_corner_radius_top_left="@dimen/_17sdp"
            app:riv_corner_radius_top_right="@dimen/_17sdp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_alignParentBottom="true"
            android:alpha="0.85"
            android:gravity="center"
            android:background="#EFE9DB"
            android:backgroundTint="#99fafafa"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTime1"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansbold"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="item type"
                android:textColor="@color/primarylight"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txtType"
                android:visibility="gone"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansbold"
                android:gravity="center"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="item type"
                android:textColor="@color/cartText"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightblack" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Chocolate"
                    android:fontFamily="monospace"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:text="price"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/et_border11"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:gravity="center">


                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="200"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:src="@drawable/coinimg"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text=""
                    android:textColor="#FDD017"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/txtAmountt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:text=" "
                    android:textColor="#FDD017"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_coin"
                    android:tint="@color/gold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:orientation="vertical"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
