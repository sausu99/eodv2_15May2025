<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThemeActivity"
    android:orientation="vertical">
    <include layout="@layout/activity_loading" ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackBtn"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_6sdp"
            android:outlineSpotShadowColor="@color/primarylight"
            android:src="@drawable/back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:fontFamily="@font/opensansbold"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/string342"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose how your PrizeX experience looks for this device"
        android:textSize="@dimen/_14ssp"
        android:layout_margin="@dimen/_3sdp"
        android:textColor="@color/black"
        android:padding="@dimen/_3sdp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:gravity="center_vertical">

        <!-- TextView -->
        <TextView
            android:id="@+id/txtLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Light mode"
            android:layout_marginBottom="@dimen/_6sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black" />

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/lightBtn"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/_3sdp"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:checked="false"
            android:buttonTint="@color/black"
            android:layout_marginStart="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:gravity="center_vertical">

        <!-- TextView -->
        <TextView
            android:id="@+id/txtDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark mode"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black" />

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/darkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_gravity="end"
            android:checked="false"
            android:buttonTint="@color/black"
            android:layout_marginStart="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:gravity="center_vertical">

        <!-- TextView -->
        <TextView
            android:id="@+id/txtSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device settings"
            android:layout_weight="1"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black" />

        <!-- RadioButton -->
        <RadioButton
            android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_3sdp"
            android:checked="false"
            android:buttonTint="@color/black"
            android:layout_marginStart="@dimen/_9sdp" />
    </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you choose Device settings, this app will use the mode that's already selected in the device's settings."
        android:textSize="@dimen/_14ssp"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_3sdp"/>



</LinearLayout>