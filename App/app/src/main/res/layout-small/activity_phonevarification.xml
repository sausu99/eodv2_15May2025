<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackBtn"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            app:tint="@color/black"
            android:src="@drawable/payu_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins"
            android:text="@string/verification"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_48sdp"
        android:gravity="center"
        android:text="@string/string296"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp"
        android:id="@+id/otps"
        android:weightSum="4">

        <EditText
            android:id="@+id/edEt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="*"
            android:background="@drawable/et_bordergray12"
            android:inputType="number"
            android:maxLength="1"
            android:paddingVertical="@dimen/_17sdp"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />


        <EditText
            android:id="@+id/edEt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:background="@drawable/et_bordergray12"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_17sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

        <EditText
            android:id="@+id/edEt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:background="@drawable/et_bordergray12"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_17sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

        <EditText
            android:id="@+id/edEt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="*"
            android:inputType="number"
            android:background="@drawable/et_bordergray12"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_17sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resend"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:text="@string/string289"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:text="@string/string290"
            android:layout_marginStart="@dimen/_3sdp"
            android:id="@+id/resendotp"
            android:textColor="#1a48c1"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>

    <TextView
        android:id="@+id/buttonVerifyNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:background="@drawable/et_bordergray12"
        android:backgroundTint="#96b5f2"
        android:text="@string/cb_verify"
        android:textColor="@color/whitewhite"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_14ssp" />
</LinearLayout>