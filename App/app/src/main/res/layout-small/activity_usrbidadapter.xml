<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/_52sdp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="@dimen/_30sdp"
                        android:visibility="gone"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_coins"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtSetName"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/primarylight"
                            android:textSize="@dimen/_13ssp"/>
                        <TextView
                            android:id="@+id/tx_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/darkgraywhite"
                            android:textSize="@dimen/_13ssp"/>

                        <TextView
                            android:id="@+id/txtBids"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:hint="@string/string101"
                            android:text="@string/string100"
                            android:textColor="@color/primarylight"
                            android:textSize="@dimen/_13ssp"/>
                    </LinearLayout>



                </LinearLayout>



                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_6sdp"
                    android:gravity="center"
                    android:paddingRight="@dimen/_6sdp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:text="30000"
                    android:textSize="@dimen/_10ssp"
                    android:background="@drawable/et_border12"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/primarylight"
                    android:layout_height="wrap_content"/>




            </RelativeLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>