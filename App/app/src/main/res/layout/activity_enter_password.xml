<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offwhiteblack"
    tools:context=".Activity.EnterPasswordActivity">

    <ImageView
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:src="@drawable/payu_left_arrow"
        android:layout_marginTop="7dip"
        app:tint="@color/black"
        android:id="@+id/imgBackk"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:layout_marginTop="-20dip"
        android:src="@drawable/ic_addtop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkgraywhite"
        android:text="@string/enterpassword"
        android:gravity="center"
        android:layout_marginHorizontal="30dip"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="11dip"
        android:text="@string/cb_password"
        android:textColor="@color/darkgraywhite"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginHorizontal="11dip"
        android:backgroundTint="@color/darkgray"
        android:hint="@string/string179"
        android:textColorHint="@color/dotsactive"
        app:passwordToggleEnabled="true"
        android:inputType="textPassword"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_filled_sqaure"
        android:backgroundTint="#96b5f2"
        android:layout_marginTop="25dip"
        android:layout_marginHorizontal="11dip"
        android:padding="11dip"
        android:text="@string/common_signin_button_text"
        android:id="@+id/txtcontinue"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="11dip"
        android:layout_marginEnd="11dip"
        android:hint="@string/string181"
        android:textColor="@color/darkgraywhite"
        android:textStyle="bold"
        android:textSize="16sp" />
</LinearLayout>