<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="11dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:background="@drawable/et_filled_profile"
        android:backgroundTint="#d2d1e1"
        android:id="@+id/card1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dip"
            android:id="@+id/ll1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTime10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:background="@drawable/et_border11"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="6dp"
                android:text="  Starts in:-  2h 45m 32s"
                android:textColor="@color/blackblack"
                android:textSize="13sp"
                android:textStyle="bold"
                android:drawablePadding="7dp"
                app:drawableStartCompat="@drawable/time" />

            <TextView
                android:id="@+id/txtTime11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:background="@drawable/et_border11"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="25dp"
                android:paddingVertical="6dp"
                android:text="  Ends in:-  2h 45m 32s"
                android:textColor="@color/blackblack"
                android:textSize="13sp"
                android:textStyle="bold"
                android:drawablePadding="7dp"
                app:drawableStartCompat="@drawable/time" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dip"
                android:layout_marginHorizontal="20dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prizepool"
                    android:textSize="13sp"
                    android:id="@+id/txtprizepool"
                    android:textColor="@color/whitewhite"
                    android:fontFamily="serif"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$8500"
                    android:layout_below="@+id/txtprizepool"
                    android:textStyle="bold"
                    android:textSize="13.5sp"
                    android:id="@+id/txtPrice1"
                    android:textColor="@color/whitewhite"
                    android:fontFamily="serif"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entryfee"
                    android:layout_alignParentEnd="true"
                    android:textSize="13sp"
                    android:id="@+id/txtentryfee"
                    android:textColor="@color/whitewhite"
                    android:fontFamily="serif"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtentryfee"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:src="@drawable/ic_coin"
                        app:tint="@color/gold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textStyle="bold"
                        android:id="@+id/txtAmount1"
                        android:textSize="13.5sp"
                        android:layout_marginStart="5dip"
                        android:textColor="@color/whitewhite"
                        android:fontFamily="serif"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.16dip"
                android:layout_marginTop="10dip"
                android:background="@color/darkgray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:paddingVertical="5dip"
                android:layout_marginHorizontal="20dip"
                android:gravity="center_vertical"
                android:paddingStart="5dip"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_ticket_white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dip"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="41 tickets left"
                        android:textSize="14sp"
                        android:textColor="@color/whitewhite"
                        android:id="@+id/txt_left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 tickets"
                        android:textSize="14sp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/whitewhite"
                        android:id="@+id/txt_total"/>

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/txt_left"
                        android:layout_marginTop="5dip"
                        android:progress="9"
                        android:max="50"
                        android:layout_height="3dip" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_filled_sqaure"
                android:backgroundTint="@color/white"
                android:layout_marginTop="12dip"
                android:layout_marginHorizontal="22dip"
                android:padding="4dip"
                android:gravity="center|end"
                android:layout_marginBottom="20dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="54dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prize1"
                        android:textSize="10.5sp"
                        android:layout_marginStart="7dip"
                        android:layout_marginTop="3dip"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.6dip"
                        android:layout_marginHorizontal="6dip"
                        android:layout_marginBottom="5dip"
                        android:textSize="14.5sp"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Product Name"
                        android:id="@+id/txtName1"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="49dip"
                    android:layout_height="49dip"
                    android:background="@drawable/et_filled_sqaure"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_marginEnd="3dip">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:src="@drawable/img_background"
                        android:id="@+id/image1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="320dip"
            android:background="@drawable/et_filled_profile"
            android:backgroundTint="@color/black"
            android:id="@+id/blocker1"
            android:visibility="gone"
            android:alpha="0.8"/>

        <ImageView
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:src="@drawable/cb_lock"
            app:tint="@color/black"
            android:visibility="gone"
            android:id="@+id/lock1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll1"
            android:layout_marginHorizontal="20dip"
            android:layout_marginBottom="20dip"
            android:background="@drawable/et_filled"
            android:backgroundTint="@color/white"
            android:id="@+id/notify1"
            android:padding="6dip">

            <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:id="@+id/imgnotify1"
                app:tint="#CA8136"
                android:src="@drawable/ic_notification"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="30dip"
                android:textSize="20sp"
                android:id="@+id/txtnotify1"
                android:text="@string/notify"
                android:textColor="#CA8136"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>