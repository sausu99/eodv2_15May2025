<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".gamesActivity">

    <include layout="@layout/activity_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY GAMES &amp; EARN COINS"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="7dp"
        android:padding="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="@drawable/et_border11"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:id="@+id/scrollview">

        <LinearLayout
            android:background="@color/offwhiteblack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/faint_yellow"
                android:paddingVertical="7dip"
                android:id="@+id/cric_ll"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_cricket"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cricket"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_cric"
                android:id="@+id/cric"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/rps_ll"
                android:background="@color/faint_yellow"
                android:paddingVertical="7dip"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_rock"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rps"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_rps"
                android:id="@+id/rps"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/faint_yellow"
                android:id="@+id/gn_ll"
                android:paddingVertical="7dip"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_guess"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guess"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_gn"
                android:id="@+id/gn"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/spin_ll"
                android:background="@color/faint_yellow"
                android:paddingVertical="7dip"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_spin"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_spin_wheel"
                android:id="@+id/spin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/faint_yellow"
                android:paddingVertical="7dip"
                android:id="@+id/coin_ll"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_toss"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_coinn"
                android:id="@+id/coin"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/ouc_ll"
                android:background="@color/faint_yellow"
                android:paddingVertical="7dip"
                android:paddingHorizontal="16dip">

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:padding="5sp"
                    app:tint="@color/blackblack"
                    android:src="@drawable/ic_spinner"
                    android:layout_marginHorizontal="7dip"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spinner"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dip"
                    android:textColor="@color/blackblack"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_spin"
                android:id="@+id/ouc"/>


            <!--ADD NEW GAMES BELOW..-->



            </LinearLayout>

    </ScrollView>
</LinearLayout>