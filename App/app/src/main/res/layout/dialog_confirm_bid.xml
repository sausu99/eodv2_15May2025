<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bg_tab"
    android:orientation="vertical"

    android:layout_margin="30dp"
    android:paddingTop="7dp"
    android:paddingLeft="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="7dp">


    <TextView
        android:id="@+id/d_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="@string/string411"
        android:textColor="@color/dialogtitle"
        android:textSize="22sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_starhas">

    </ImageView>
    <TextView
        android:id="@+id/amountshown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="22sp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:fontFamily="@font/opensansmediam"
        android:text=" "
        android:textColor="@color/dialogtitle"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/reducetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="22sp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:fontFamily="@font/opensansmediam"
        android:text=" 4000 Stars will be deducted from your stars balance on confirmation"
        android:textColor="@color/dialogtitle"
        android:textSize="18sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#9C9C9C"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:background="@color/transprant"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/string107"
                android:textAllCaps="false"
                android:textColor="@color/primarylight"
                android:textSize="18dp" />

            <View
                android:id="@+id/dview"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#9C9C9C">

            </View>

            <Button
                android:id="@+id/submitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transprant"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/string412"
                android:textAllCaps="false"
                android:textColor="@color/primarylight"
                android:textSize="@dimen/_18sdp" />



</LinearLayout>



</LinearLayout>