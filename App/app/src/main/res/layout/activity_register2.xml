<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity">

    <include layout="@layout/activity_loading"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:src="@drawable/payu_left_arrow"
                android:layout_marginTop="7dip"
                app:tint="@color/black"
                android:id="@+id/imgBackk"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:layout_marginTop="-20dip"
                android:src="@drawable/ic_addtop"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string356"
                android:textSize="27sp"
                android:layout_marginTop="25sp"
                android:paddingLeft="10sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textColor="@color/primarylight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string357"
                android:textColor="@color/darkgraywhite"
                android:paddingLeft="10sp"
                android:layout_marginTop="5dip"
                android:layout_gravity="left"
                android:gravity="left"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="7dip"
                android:fontFamily="@font/opensansmediam"
                android:text="@string/string358"
                android:textColor="@color/dark_gray_primer"
                android:layout_marginHorizontal="11dip"
                android:textSize="18sp"
                android:visibility="gone">

            </TextView>

            <EditText
                android:id="@+id/txtYourName"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/et_border"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:drawableTint="@color/dark_gray"
                android:hint="@string/string111"
                android:layout_marginTop="25sp"
                android:textSize="18sp"
                android:textColorHint="@color/dark_gray"
                android:textColor="@color/darkgraywhite"
                android:layout_marginHorizontal="11dip"
                android:paddingStart="10dip">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="7sp"
                android:fontFamily="@font/opensansmediam"
                android:text="@string/string359"
                android:layout_marginHorizontal="11dip"
                android:textColor="@color/dark_gray_primer"
                android:textSize="18sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/txtEmailId"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/et_border"
                android:layout_marginTop="16dip"
                android:hint="youremail@gmail.com"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawableTint="@color/dark_gray"
                android:textColor="@color/darkgraywhite"
                android:textColorHint="@color/dark_gray"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:layout_marginHorizontal="11dip"
                android:paddingStart="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="7dip"
                android:fontFamily="@font/opensansmediam"
                android:text="@string/string360"
                android:layout_marginHorizontal="11dip"
                android:textColor="@color/dark_gray_primer"
                android:id="@+id/txtmobno"
                android:textSize="18sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:background="@drawable/et_border"
                android:layout_marginHorizontal="11dip"
                android:id="@+id/mobno_ll"
                android:orientation="horizontal">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    app:ccp_textColor="@color/black"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_textSize="18sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/edForgotNum"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:background="@android:color/transparent"
                    android:hint="Enter mobile number"
                    android:inputType="number"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColorHint="@color/dark_gray"
                    android:textSize="18sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="7sp"
                android:fontFamily="@font/opensansmediam"
                android:text="@string/string361"
                android:visibility="gone"
                android:textColor="@color/dark_gray_primer"
                android:layout_marginHorizontal="11dip"
                android:textSize="18sp">

            </TextView>


            <EditText
                android:id="@+id/edPass"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@drawable/et_border"
                android:hint="********"
                android:layout_marginTop="16dip"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_lock"
                android:inputType="textPassword"
                android:drawableTint="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:paddingStart="10sp"
                android:layout_marginHorizontal="11dip"
                android:textSize="18sp"/>
            <ProgressBar
                android:id="@+id/strengthProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:max="100"
                android:progress="0"
                android:layout_marginHorizontal="11dip"
                style="?android:attr/progressBarStyleHorizontal" />

            <TextView
                android:id="@+id/criteriaTextView"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="11dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="@color/darkgraywhite"
                android:visibility="gone"
                android:text="Criteria:" />


            <TextView
                android:id="@+id/referralcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:layout_marginTop="15sp"
                android:textColor="@color/dark_gray"
                android:text="@string/string362"
                android:textSize="18sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rd"
                android:layout_marginTop="16sp">

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@color/primarylight"
                    android:fontFamily="@font/opensansmediam"
                    android:textColor="@color/primarylight"
                    android:text="@string/string363"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansmediam"
                    android:text=" Privacy Policy,TOS"
                    android:textColor="@color/primarylight"
                    android:textSize="10sp">
                </TextView>
            </LinearLayout>


            <TextView
                android:id="@+id/txtLoginActi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/btn_bg1"
                android:backgroundTint="#1a48c1"
                android:gravity="center"
                android:padding="11dip"
                android:layout_marginHorizontal="11dip"
                android:text="@string/string364"
                android:textColor="@color/whitewhite"
                android:layout_marginBottom="10dip"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/refcode"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>