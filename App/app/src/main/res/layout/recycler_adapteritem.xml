<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearheader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="7dp"
    android:layout_marginBottom="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:backgroundTint="@color/transprant"
        android:background="@drawable/btn_bglboutline"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/transprant"
            android:elevation="10dp"
            android:id="@+id/rl1"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  2h 45m 32s"
                android:id="@+id/txtTime"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/time"
                android:layout_marginStart="3dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:background="@drawable/et_border11"
                android:backgroundTint="@color/white"
                android:paddingVertical="6dp"
                android:paddingHorizontal="9dp"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_info"
                android:id="@+id/type"
                android:layout_marginEnd="3dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:layout_marginTop="2sp"
            android:src="@drawable/img_background"
            app:riv_corner_radius_bottom_left="25dp"
            app:riv_corner_radius_bottom_right="25dp"
            app:riv_corner_radius_top_left="25dp"
            app:riv_corner_radius_top_right="25dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.85"
            android:gravity="center"
            android:background="@color/white"
            android:backgroundTint="#99fafafa"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTime1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansbold"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="item type"
                android:textColor="@color/primarylight"
                android:textSize="14sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txtType"
                android:visibility="gone"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansbold"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="item type"
                android:textColor="@color/primarylight"
                android:textSize="14sp" />

            <View
                android:id="@+id/view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightblack" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Chocolate"
                    android:fontFamily="monospace"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="5dp"
                    android:text="price"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="10sp"
                android:background="@drawable/et_border11"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="200"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/coinimg"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="#FDD017"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtAmountt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:text=" "
                    android:textColor="#FDD017"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="17sp"
                    android:layout_height="17sp"
                    android:src="@drawable/ic_coin"
                    app:tint="@color/gold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:orientation="vertical"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
