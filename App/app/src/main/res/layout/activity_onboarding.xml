<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.IntroductionActivity">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/img"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/img_sliderimg"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:id="@+id/imgdesc"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tittle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_tittle2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/slidetitle1"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tittle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_continue"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/slidetitle3"
            android:textColor="@color/darkgraywhite"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
