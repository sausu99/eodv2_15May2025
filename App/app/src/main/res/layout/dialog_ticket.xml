<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bg_tab"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:paddingTop="7dp"
    android:paddingLeft="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="7dp">


    <TextView
        android:id="@+id/d_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:fontFamily="@font/opensansmediam"
        android:gravity="center|left"
        android:text=""
        android:textColor="@color/dialogtitle"
        android:textSize="18sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/ic_starhas">

    </ImageView>

    <LinearLayout
        android:id="@+id/ticketlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTixketNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1234"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/primarylight"
            android:textStyle="bold"
            android:textSize="15dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/bottomtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center|left"
        android:padding="5dp"
        android:visibility="visible"
        android:fontFamily="@font/opensansmediam"
        android:text="@string/string242"
        android:textColor="@color/dialogtitle"
        android:textSize="18sp" />









        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/graywhite"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:background="@color/transprant"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/string107"
                android:textAllCaps="false"
                android:textColor="@color/primarylight"
                android:textSize="18dp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transprant"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/string37"
                android:textAllCaps="false"
                android:textColor="@color/primarylight"
                android:textSize="18dp" />



</LinearLayout>



</LinearLayout>