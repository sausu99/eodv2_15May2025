<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradiantop"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgBackk"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:padding="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/payu_left_arrow"
        app:tint="@color/whitewhite" />

    <LinearLayout
        android:id="@+id/walletbtn"
        android:background="@drawable/whitealpha"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25sp"
        android:layout_width="wrap_content"
        android:alpha="0.98"
        android:layout_marginVertical="10sp"
        android:layout_height="45sp">

        <ImageView
            android:src="@drawable/walletpng"
            app:tint="@color/whitewhite"
            android:layout_marginTop="2sp"
            android:layout_marginStart="8sp"
            android:layout_width="50sp"
            android:layout_height="40sp">

        </ImageView>
        <TextView
            android:id="@+id/walletbal"
            android:text=" "
            android:layout_marginEnd="20sp"
            android:layout_marginTop="5sp"
            android:textSize="24sp"
            android:textColor="@color/whitewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>




</RelativeLayout>