<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Activity.IntroductionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="7dip"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/primarylight"
            android:text="@string/skip_txt"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="10sp"
            android:drawableTint="@color/primarylight"
            android:elevation="10dp"
            android:id="@+id/skipbtn"
            android:layout_marginTop="15dip"
            android:layout_marginEnd="12dip"
            android:layout_alignParentEnd="true"
            android:background="@drawable/et_dotted"
            android:paddingVertical="12dip"
            android:paddingHorizontal="16dip"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginStart="12dip"
            android:elevation="10dp"
            android:background="@drawable/et_dotted"
            android:padding="10dip"
            android:id="@+id/language"
            app:tint="@color/primarylight"
            android:src="@drawable/ic_translate"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:padding="7dp"
            android:id="@+id/layout"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:visibility="invisible"
                android:layout_marginRight="80dp"
                app:tint="@color/primarylight"
                android:src="@drawable/moveback"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:src="@drawable/img_selected"
                    app:tint="@color/primarylight"/>

                <ImageView
                    android:id="@+id/p2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight"
                    android:visibility="visible"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/front"
                android:layout_width="43dp"
                android:layout_height="43dp"
                app:tint="@color/primarylight"
                android:layout_marginLeft="80dp"
                android:src="@drawable/movefront" />
        </LinearLayout>
    </RelativeLayout>














    <LinearLayout
        android:id="@+id/layoutonboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_filled_up"
        android:backgroundTint="@color/colorPrimary"
        android:paddingHorizontal="22dip"
        android:paddingVertical="30dip"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="@string/welcome_app"
            android:textColor="@color/whitewhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_auction"
            android:layout_marginTop="16dip"
            android:textSize="17sp"
            android:textColor="#eee"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutSignIn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="7dip"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primarylight"
                    android:text="@string/get_started"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCreateAcc"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginStart="7dip"
                android:background="@drawable/et_dotted_orange">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/whitewhite"
                    android:text="@string/string67"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>