<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.LoginActivity">

    <include layout="@layout/activity_loading"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_19sdp"
        android:baselineAligned="false"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/primarylight"
        android:textSize="@dimen/_19ssp"
        android:visibility="gone">

    </TextView>

    <ImageView
        android:id="@+id/imglogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_143sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_addtop"
        android:visibility="gone">

    </ImageView>

    <TextView
        android:id="@+id/accesspage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:fontFamily="@font/opensansmediam"
        android:text="@string/string233"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@color/primarylight"
        android:textSize="@dimen/_13ssp"/>

    <TextView
        android:id="@+id/txtView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:fontFamily="@font/opensansmediam"
        android:text="@string/string61"
        android:textSize="@dimen/_13ssp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/logintop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_117sdp"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/backk"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back"
                android:visibility="gone"
                app:tint="@color/whitewhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:fontFamily="monospace"
                android:text="@string/string351"
                android:textColor="@color/whitewhite"
                android:textSize="@dimen/_27ssp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backcard"
            android:orientation="vertical"
            android:padding="@dimen/_17sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string352"
                android:textColor="@color/primarylight"
                android:textSize="@dimen/_19ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="1dp"
                android:text="@string/string353"
                android:textColor="@color/darkgraywhite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:fontFamily="monospace"
                android:inputType="number"
                android:text="@string/string354"
                android:textColor="@color/darkgraywhite"
                android:textSize="@dimen/_11ssp" />


            <LinearLayout
                android:id="@+id/Layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <com.rilixtech.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:ccp_textColor="@color/darkgraywhite"
                    android:layout_marginLeft="@dimen/_3sdp"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_textSize="@dimen/_13ssp" />

                <EditText
                    android:id="@+id/edForgotNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:backgroundTint="@color/black"
                    android:hint="@string/string168"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_6sdp"
                    android:text=""
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_9sdp"
                android:fontFamily="@font/opensansmediam"
                android:text="@string/string177"
                android:textColor="@color/darkgraywhite"
                android:textSize="@dimen/_13ssp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="monospace"
                android:text="@string/string177"
                android:textColor="@color/darkgraywhite"
                android:textSize="@dimen/_11ssp" />

            <EditText
                android:id="@+id/edPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:backgroundTint="@color/black"
                android:hint="@string/string179"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_6sdp"
                android:text=""
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/txtLoginActi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="@string/string191"
                android:textColor="@color/whitewhite"
                android:textSize="@dimen/_15ssp" />


            <TextView
                android:id="@+id/txtForgetPassw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="@dimen/_4sdp"
                android:hint="@string/string181"
                android:textColorHint="@color/darkgraywhite"
                android:textColor="@color/darkgraywhite"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/Layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="center"
                    android:hint="@string/string180"
                    android:textColorHint="@color/darkgraywhite"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/txtSignupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="@string/string192"
                    android:textColor="@color/primarylight"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txtChooseLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/string190"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/colorPrimary"
        android:gravity="center"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/string191"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:text="@string/string313"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/string315"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:textSize="@dimen/_11ssp"
        android:text="@string/string316"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView5"
        android:textSize="@dimen/_11ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:text="@string/string317"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:text="@string/string58"
        android:textAlignment="center"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginBottom="@dimen/_19sdp"
        android:visibility="gone" />

</LinearLayout>
