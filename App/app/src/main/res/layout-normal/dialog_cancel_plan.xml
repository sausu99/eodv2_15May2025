<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_275sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/et_borderr"
    android:orientation="vertical"
    android:padding="@dimen/_9sdp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/areyousure"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="monospace"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/keep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_curve_border"
        android:text="@string/keepplan"
        android:gravity="center"
        android:layout_marginTop="@dimen/_14sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/opensansbold"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_curve_border"
        android:backgroundTint="#f03848"
        android:text="@string/cancelplan"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_7sdp"
        android:padding="@dimen/_4sdp"
        android:fontFamily="@font/opensansbold"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>