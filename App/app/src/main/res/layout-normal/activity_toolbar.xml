<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradiantop"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgBackk"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:src="@drawable/payu_left_arrow"
        app:tint="@color/whitewhite" />

    <TextView
        android:id="@+id/txtAucname"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:fontFamily="@font/opensansmediam"
        android:textColor="@color/whitewhite"
        android:textSize="@dimen/_15ssp" />
</LinearLayout>