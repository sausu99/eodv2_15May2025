<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="11dip"
    android:background="@color/white"
    android:layout_marginVertical="2dip"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:id="@+id/part1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/opensansbold"
            android:text="100 Coins"
            android:id="@+id/coins"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/og_amt"
                android:text="$100"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansmediam"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dis_amt"
                android:text="$20"
                android:layout_marginStart="7dip"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/opensansbold"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dip"
        android:layout_toEndOf="@id/part1">

        <ImageView
            android:layout_width="135dip"
            android:layout_height="70dip"
            android:src="@drawable/disc_board_back"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensansbold"
            android:text="80 % OFF"
            android:textColor="#346758"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textColor="@color/whitewhite"
        android:textStyle="bold"
        android:fontFamily="@font/opensansbold"
        android:text="@string/buy"
        android:layout_alignParentEnd="true"
        android:padding="15dip"
        android:gravity="center"
        android:id="@+id/buy"
        android:background="@drawable/et_borderrr"
        android:backgroundTint="#346758"/>

</RelativeLayout>
