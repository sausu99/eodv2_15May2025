<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_227sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/btn_bglboutlinewhite"
    android:orientation="vertical"
    android:layout_margin="@dimen/_6sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string102"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:fontFamily="@font/opensansregular"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="@color/purple"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:src="@drawable/claimdone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string103"
        android:textSize="@dimen/_9sdp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_6sdp"
        android:fontFamily="@font/opensansregular"
        android:layout_marginRight="@dimen/_6sdp"
        android:textColor="@color/primarylight"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layoutmypurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:background="@drawable/et_bordergray11">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/string104"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensansregular"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutrateapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            android:background="@drawable/btn_bg1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/string105"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensansregular"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>