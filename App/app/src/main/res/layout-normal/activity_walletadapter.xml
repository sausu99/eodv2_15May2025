<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/auctionbg"
    tools:context=".Activity.MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/card1"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="@dimen/_57sdp"
                        android:padding="@dimen/_1sdp"
                        android:src="@drawable/img_coins"
                        android:layout_height="@dimen/_57sdp"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtSetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_1sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:text=""
                            android:textColor="@color/primarylight"
                            android:textSize="@dimen/_13ssp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensansbold"
                                android:paddingLeft="@dimen/_3sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="@string/string39"
                                android:textColor="@color/darkgraywhite"
                                android:textSize="@dimen/_13ssp"/>

                            <TextView
                                android:id="@+id/txtGetCoin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensansmediam"
                                android:paddingTop="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_73sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text=""
                                android:textColor="@color/darkgraywhite"
                                android:textSize="@dimen/_13ssp"/>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensansbold"
                                android:paddingLeft="@dimen/_3sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="@string/string267"
                                android:textColor="@color/darkgraywhite"
                                android:textSize="@dimen/_13ssp"/>
                            <TextView
                                android:id="@+id/tx_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensansmediam"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:text=""
                                android:textColor="@color/darkgraywhite"
                                android:textSize="@dimen/_13ssp"/>
                        </LinearLayout>

                    </LinearLayout>





                </LinearLayout>







            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_19sdp"
                android:background="@drawable/et_border12"
                android:fontFamily="@font/opensansbold"
                android:gravity="right"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_6sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="30000"
                android:textColor="@color/primarylight"
                android:textSize="@dimen/_11ssp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>