<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:padding="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_42sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_1sdp"
                        android:background="@color/offwhiteblack"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="@dimen/_67sdp"
                            android:layout_height="@dimen/_55sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_coins" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtSetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/primarylight"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tx_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensansbold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text=""
                            android:textColor="@color/darkgraywhite"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensansmediam"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp" />


                    <TextView
                        android:id="@+id/txtCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/opensansbold"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="@string/string118"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>