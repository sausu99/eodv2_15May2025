<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhiteblack"
    android:orientation="vertical"
    tools:context=".Activity.EnterPasswordActivity">

    <ImageView
        android:layout_width="@dimen/_29sdp"
        android:layout_height="@dimen/_29sdp"
        android:src="@drawable/payu_left_arrow"
        android:layout_marginTop="@dimen/_4sdp"
        app:tint="@color/black"
        android:id="@+id/imgBackk"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_73sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_minus14sdp"
        android:src="@drawable/ic_addtop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkgraywhite"
        android:text="@string/enterpassword"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_19sdp"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:text="@string/cb_password"
        android:textColor="@color/darkgraywhite"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:backgroundTint="@color/darkgray"
        android:hint="@string/string179"
        android:textColorHint="@color/dotsactive"
        app:passwordToggleEnabled="true"
        android:inputType="textPassword"
        android:textSize="@dimen/_13ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_filled_sqaure"
        android:backgroundTint="#96b5f2"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:padding="@dimen/_6sdp"
        android:text="@string/common_signin_button_text"
        android:id="@+id/txtcontinue"
        android:gravity="center"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:hint="@string/string181"
        android:textColor="@color/darkgraywhite"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp" />
</LinearLayout>