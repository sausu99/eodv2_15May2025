<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradiantop"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgBackk"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:scaleType="fitXY"
        android:src="@drawable/payu_left_arrow"
        app:tint="@color/whitewhite" />
    <LinearLayout
        android:id="@+id/walletbtn"
        android:background="@drawable/whitealpha"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_width="wrap_content"
        android:alpha="0.98"
        android:layout_marginVertical="@dimen/_3sdp"
        android:layout_height="@dimen/_30sdp">

        <ImageView
            android:src="@drawable/walletpng"
            app:tint="@color/whitewhite"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_25sdp">

        </ImageView>
        <TextView
            android:id="@+id/walletbal"
            android:text=" "
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/whitewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>




</RelativeLayout>