                    android:elevation="10dip"
                    android:background="@color/offwhiteblack"
                    android:paddingHorizontal="16dip"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerInParent="true"
                    android:background="@color/black" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:id="@+id/moreitems"
                android:layout_margin="11dip"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutbottom"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bgred"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <!-- Left-aligned text (Tickets Left) -->
        <TextView
            android:id="@+id/tktleft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addmore"
            android:layout_marginStart="15dp"
            android:text="100000 tickets left"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/whitewhite"
            android:textSize="19sp"
            android:fontFamily="sans-serif-black" />

        <!-- Buy Ticket button, aligned to the right -->
        <TextView
            android:id="@+id/addmore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bglboutlinewhite"
            android:text="@string/buy_ticket"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/selected2"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp" />

