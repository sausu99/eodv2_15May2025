            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prizes"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_withdraw"
                android:drawablePadding="10sp"
                android:drawableTint="@color/primarylight"
                android:textColor="@color/primarylight"
                android:fontFamily="monospace"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dip"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:id="@+id/recycler_prizes"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:id="@+id/txt_morelikethis"
                android:background="@color/offwhiteblack">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dip"
                    android:textSize="19sp"
                    android:text="@string/morelikethis"
                    android:outlineAmbientShadowColor="@color/transprant"
