                </LinearLayout>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/myticketrelative"
                android:layout_width="match_parent"
                android:layout_marginTop="19dip"
                android:layout_marginHorizontal="16dip"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myticket"
                    android:drawablePadding="10sp"
                    android:drawableTint="@color/primarylight"
                    android:drawableRight="@drawable/ic_ticket"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primarylight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewalltickets"
                    android:textSize="18sp"
                    android:id="@+id/viewall"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/primarylight"/>
            </RelativeLayout>



            <TextView
