<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Activity.IntroductionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/_3sdp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primarylight"
            android:text="@string/skip_txt"
            android:drawableEnd="@drawable/ic_next"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableTint="@color/primarylight"
            android:elevation="10dp"
            android:id="@+id/skipbtn"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/et_dotted"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_9sdp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:elevation="10dp"
            android:background="@drawable/et_dotted"
            android:padding="@dimen/_6sdp"
            android:id="@+id/language"
            app:tint="@color/primarylight"
            android:src="@drawable/ic_translate"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:id="@+id/layout"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:visibility="invisible"
                app:tint="@color/primarylight"
                android:layout_marginRight="@dimen/_54sdp"
                android:src="@drawable/moveback"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p1"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/img_selected"
                    app:tint="@color/primarylight"/>

                <ImageView
                    android:id="@+id/p2"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p3"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p4"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight" />

                <ImageView
                    android:id="@+id/p5"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/img_notselected"
                    app:tint="@color/primarylight"
                    android:visibility="visible"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/front"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginLeft="@dimen/_57sdp"
                app:tint="@color/primarylight"
                android:src="@drawable/movefront" />
        </LinearLayout>
    </RelativeLayout>














    <LinearLayout
        android:id="@+id/layoutonboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_filled_up"
        android:backgroundTint="@color/colorPrimary"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="@string/welcome_app"
            android:textColor="@color/whitewhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_auction"
            android:layout_marginTop="@dimen/_9sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="#eee"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutSignIn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/primarylight"
                    android:text="@string/get_started"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCreateAcc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@drawable/et_dotted_orange">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/whitewhite"
                    android:text="@string/string67"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>